<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Botón de regreso -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="@string/Fragment_near_me_Go_back"
            app:tint="#E57373"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Título -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/Fragment_near_me_Near_destinies"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backButton" />

        <!-- TabLayout -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/white"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabSelectedTextColor="#4CAF50"
            app:tabTextColor="#666666"
            app:tabIndicatorColor="#4CAF50"
            app:layout_constraintTop_toBottomOf="@id/titleTextView">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Fragment_near_me_Map" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Fragment_near_me_Destinies" />
        </com.google.android.material.tabs.TabLayout>

        <!-- Contenedor del Mapa (para cuando esté seleccionado el tab Mapa) -->
        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="800dp"
                    android:background="#E0E0E0"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mapa_quito"
                    android:contentDescription="@string/Fragment_near_me_Map" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <!-- Contenedor de Destinos -->
        <LinearLayout
            android:id="@+id/destinationsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:paddingBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Mapa estático en la parte superior -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/mapImageView"
                    android:layout_width="match_parent"
                    android:layout_height="750dp"
                    android:background="#E0E0E0"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mapa_quito"
                    android:contentDescription="@string/Fragment_near_me_Map_view" />
            </androidx.cardview.widget.CardView>

            <!-- Lista de destinos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/destinationsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>